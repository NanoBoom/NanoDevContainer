{
  "name": "nanodev-python",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "HOST_USER": "${localEnv:USER}"
    }
  },

  // 挂载配置：直接映射用户配置文件
  "mounts": [
    // SSH 密钥和配置（只读，安全第一）
    "source=${localEnv:HOME}/.ssh,target=/home/dev/.ssh,type=bind,readonly",

    // Git 配置（可写，需要在容器内提交）
    "source=${localEnv:HOME}/.gitconfig,target=/home/dev/.gitconfig,type=bind",

    // Claude Code 配置（路径映射解决 macOS 绝对路径问题）
    "source=${localEnv:HOME}/.claude,target=/home/dev/.claude,type=bind",

    // 下载目录
    "source=${localEnv:HOME}/Downloads,target=/home/dev/Downloads,type=bind"
  ],

  // 容器运行时设置
  "runArgs": [
    // 使用主机网络：容器和主机共享网络栈
    "--network=host"
  ],

  // 环境变量
  "containerEnv": {
    "TERM": "xterm-256color"
  },

  // 容器启动后执行的命令（可选：安装额外工具）
  "postCreateCommand": "sudo npm install -g @anthropic-ai/claude-code && sudo npm install -g @musistudio/claude-code-router",

  // VS Code 扩展（推荐的开发工具扩展）
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  // 使用开发用户（与宿主机 UID/GID 匹配）
  "remoteUser": "dev"
}
